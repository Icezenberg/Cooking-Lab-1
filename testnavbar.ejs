<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <!--Stylesheet css-->
    <link rel="stylesheet" href="stylesheets/style.css">

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

</head>
<body>
<nav class="navbar navbar-expand-lg container-fluid d-flex justify-content-between ">
    <a class="navbar-brand " href="#">
        <img src="img/logo.png" width="80" height="80" class="d-inline-block align-top" alt="Logo marmite"> 
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse w-auto" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link display-4 orange" href="#">Cooking'Lab</a>
            </li>
            <li class="nav-item">
                <a class="nav-link orange" href="#">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link orange" href="/ateliersPublicsRoute">Nos ateliers</a>
            </li>
            <% if(id && role === 'cuisinier') { %>
            <li class="nav-item">
                <a class="nav-link orange" href="/ateliersRoute">Je suis cuisinier</a>
            </li>
            <% } %>
            <% if(!id && !username) { %>
            <li class="nav-item">
                <a href="#inscription-utilisateur" data-toggle="modal" class="nav-item btn btn-outline-success">Inscription</a>
            </li>
            <li class="nav-item ml-2">
                   
                <a href="#connexion-utilisateur" data-toggle="modal" class="nav-item btn btn-outline-primary"><p>Déjà inscrit ?</p>Connexion</a>
            </li>
            <% } %>
            <% if(id && username) { %>
            <li>
                <p>Bonjour : <%= username %></p>
            </li>
            <li class="nav-item">
                <a href="/logout" class="nav-link pink">Deconnexion</a>
            </li>
            <% } %>
        </ul>
    </div>
</nav>


<!--fin modal connexion utilisateur-->

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
